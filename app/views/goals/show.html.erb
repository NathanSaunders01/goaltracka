<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="well score-well">
        <h3 class="text-center">Scoreboard</h3>
        <hr>
        <p>Total XP: <%= @total_goal_xp %>xp</p>
        <p>Total Count: <%= @goal.goal_activities.count %></p>
        <p>Daily Average: 350xp</p>
        <p>Highest Daily Score: 600xp</p>
      </div>
    </div>
    <div class="col-md-6">
      <h1 class="text-center"><%= @goal.name %></h1>
      <% if @goal_activities.count > 0 %>
        <%= link_to new_goal_activity_path(@goal) do %>
          <h1><i class="fa fa-plus"></i></h1>
        <% end %>
      <% end %>
      <hr>
      <h4 class="text-center">Don't forget! - <%= @goal.description %></h4>
      <div class="recent-activity">
        <h4>Recent Activity</h4>
        <hr>
        <% if @goal_activities.count > 0 %>
          <% @goal_activities.each do |activity| %>
            <div class="well well-activity <%= cycle(" ", "bg-white")%>">
              <p class="text-center">You completed <%= activity.quantity %> sets of <%= (activity.goal.name).downcase %> - <strong><%= activity.quantity*activity.goal.xp %>xp</strong></p>
              <div class="text-center">
                <small><%= time_ago_in_words(activity.created_at) %> ago </small>
              </div>
              <div class="activity-actions">
                <%= link_to goal_activity_path(goal_id: activity.goal_id, id: activity.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-default" do %>
                  <i class="fa fa-trash-o"></i>
                <% end %>
                </div>
            </div>
          <% end %>
        <% else %>
          <br>
          <div class="text-center">
            <p>You have no activities recorded yet! Log your first one by click on the button blelow</p>
            <br>
            <%= link_to "Log new Activity", new_goal_activity_path(@goal), class:"btn btn-default btn-md" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>