<div class="container">
  <h1 class="text-center">Goal Sheet</h1>
  <hr>
  </br>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if current_user.goals.count > 0 %>
        <table class="table table-striped">
          <thead>
            <th><stong>Goal</stong></th>
            <th><stong>XP</stong></th>
            <th><stong>Total XP</stong></th>
            <th><stong>Action</stong></th>
          </thead>
          <tbody>
            <% @user_goals.each do |goal| %>
            <tr>
              <td><%= goal.name %></td>
              <td><%= goal.xp %></td>
              <td><%= goal.total_goal_xp %></td>
              <td>
                <%= link_to "Edit", edit_goal_path(goal), class: 'btn btn-default btn-xs' %>
                <%= link_to "Delete", goal_path(goal),
                            method: :delete, data: {confirm: "Are you sure you want to delete the project?"},
                            class: 'btn btn-xs btn-danger' %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h4 class="text-center">You have no goals yet!</h4>
        </br>
        <div class="text-center">
          <%= link_to "Create your first goal", new_goal_path, class:"btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>